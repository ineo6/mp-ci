{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib",
    "fixtures"
  ]
}
